<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.work.dmm.SettingsActivity">

    <EditText
        android:id="@+id/adress5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="textPersonName"
        android:text="3F"
        app:layout_constraintLeft_toRightOf="@+id/adress4"
        android:layout_marginLeft="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/adress4" />

    <EditText
        android:id="@+id/adress3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="textPersonName"
        android:text="3F"
        app:layout_constraintLeft_toRightOf="@+id/adress2"
        android:layout_marginLeft="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/adress2" />

    <EditText
        android:id="@+id/adress4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="textPersonName"
        android:text="3F"
        app:layout_constraintLeft_toRightOf="@+id/adress3"
        android:layout_marginLeft="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/adress3" />

    <EditText
        android:id="@+id/adress6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:ems="2"
        android:inputType="textPersonName"
        android:text="3F"
        app:layout_constraintBaseline_toBaselineOf="@+id/adress5"
        app:layout_constraintLeft_toRightOf="@+id/adress5" />

    <EditText
        android:id="@+id/adress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="textPersonName"
        android:text="3F"
        app:layout_constraintLeft_toRightOf="@+id/adress1"
        android:layout_marginLeft="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/adress1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="address:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum Datapoints"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText_MaxDataPoints" />

    <EditText
        android:id="@+id/editText_MaxDataPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:text="10"
        app:layout_constraintRight_toLeftOf="@+id/btn_acceptNewMaxDataPoints"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.333"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/adress1" />

    <Button
        android:id="@+id/btn_accpetNewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:onClick="onConfirmButton_Address"
        android:text="Confirm"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_acceptNewMaxDataPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:onClick="onConfirmButton_MaxDataPoints"
        android:text="Confirm"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText_MaxDataPoints"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/adress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="textPersonName"
        android:text="3F"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_accpetNewID" />

</android.support.constraint.ConstraintLayout>
