<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.measurementActivities.Level2.VoltageOscilloscopeActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:minWidth="40dp">

        <com.example.work.dmm.displayAndVisualisationClasses.VerticalSeekBar
            android:id="@+id/seekBar1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:max="1000"
            android:progress="1" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/oscilloscope_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/oscilloscopeChart"
            android:layout_width="match_parent"
            android:layout_height="290dp"/>

        <TextView
            android:id="@+id/oscilloscope_pkpkVoltage_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/oscilloscopeChart"
            android:text="Voltage(pk-pk):"/>

    </RelativeLayout>

</LinearLayout>
