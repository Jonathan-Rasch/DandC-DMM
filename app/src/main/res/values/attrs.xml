<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Speedometer">
        <attr name="maxSpeed" format="float"></attr>
        <attr name="currentSpeed" format="float"></attr>
        <attr name="onColor" format="color"></attr>
        <attr name="offColor" format="color"></attr>
        <attr name="scaleColor" format="color"></attr>
        <attr name="scaleTextSize" format="dimension"></attr>
        <attr name="readingTextSize" format="dimension"></attr>
    </declare-styleable>
    <string-array name="waveforms_array">
        <item>Sinusoidal wave</item>
        <item>Square wave</item>
        <item>Triangle wave</item>
        <item>Noise</item>
    </string-array>
    <string-array name="periodUnits_array">
        <item>S</item>
        <item>mS</item>
        <item>uS</item>
    </string-array>
    <string-array name="freqUnits_array">
        <item>Hz</item>
        <item>kHz</item>
        <item>Mhz</item>
    </string-array>
    <string-array name="amplUnits_array">
        <item>V</item>
        <item>mV</item>
        <item>uV</item>
    </string-array>

</resources>