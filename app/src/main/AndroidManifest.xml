<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.work.dmm">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".utilityClasses.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ConnectionScreenActivity"
            android:label="@string/title_activity_connection_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.measurementActivities.Level1.DCvoltageActivity" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.measurementActivities.Level2.VoltageOscilloscopeActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".activities.measurementActivities.Level3.FrequencyResponseActivity" />
        <activity android:name=".activities.measurementActivities.Level1.DCcurrentActivity" />
        <activity android:name=".activities.measurementActivities.Level3.SignalGeneratorActivity" />
        <activity android:name=".activities.measurementActivities.Level1.ResistanceActivity" />
        <activity
            android:name=".activities.measurementActivities.Level2.CurrentOscilloscopeActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".activities.measurementActivities.Level3.LightIntensityActivity" />
        <activity android:name=".activities.measurementActivities.Level3.CapacitanceActivity"></activity>
    </application>

</manifest>